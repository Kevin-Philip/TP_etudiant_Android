<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="731dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_register"
            android:layout_width="175dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="59dp"
            android:layout_marginLeft="59dp"
            android:layout_marginTop="51dp"
            android:text="Register your book"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_register"
            android:layout_alignLeft="@+id/button_register"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-138dp"
            android:layout_marginLeft="-138dp"
            android:layout_marginTop="112dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name of the book" />

        <EditText
            android:id="@+id/editText_author"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_register"
            android:layout_alignLeft="@+id/button_register"
            android:layout_alignTop="@+id/editText_name"
            android:layout_alignEnd="@+id/editText_name"
            android:layout_alignRight="@+id/editText_name"
            android:layout_alignBottom="@+id/editText_name"
            android:layout_marginStart="-84dp"
            android:layout_marginLeft="-84dp"
            android:layout_marginTop="264dp"
            android:layout_marginEnd="-56dp"
            android:layout_marginRight="-56dp"
            android:layout_marginBottom="-264dp"
            android:ems="10"
            android:inputType="date"
            android:text="Author of the book" />

        <EditText
            android:id="@+id/editText_date"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button_register"
            android:layout_alignLeft="@+id/button_register"
            android:layout_alignTop="@+id/editText_author"
            android:layout_alignEnd="@+id/editText_author"
            android:layout_alignRight="@+id/editText_author"
            android:layout_alignBottom="@+id/editText_author"
            android:layout_marginStart="-82dp"
            android:layout_marginLeft="-82dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="-246dp"
            android:ems="10"
            android:inputType="date"
            android:text="Release date" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="539dp"
            android:layout_marginEnd="173dp"
            android:layout_marginRight="173dp"
            android:layout_marginBottom="144dp"
            android:text="Create" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>